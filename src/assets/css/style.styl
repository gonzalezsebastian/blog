html
    font-family: Arial, Helvetica, sans-serif
    header
        background: #444444
        display: flex
        justify-content: space-between
        box-shadow: 0px 3px 2px 0px rgba(0,0,0,0.2)
        div:first-child
            display: flex
        div
            .logo
                padding: 0 35px
                border-right: 2px solid #22bce0
                margin: 10px 0
                img
                    height: 100px
            .encabezado
                margin: 10px 0
                padding: 0 10px
                display: flex
                flex-direction: column
                justify-content: center
                .titulo,.clase,.fuente
                    color: white
                .titulo
                    h2
                        font-size: 18px;
                .clase
                    margin-top: 5px
                    h3
                        font-size: 14px
                        font-style: italic
                        color: #22bce0
                        font-weight: bold
                .fuente
                    display: flex
                    margin-top: 5px
                    align-items: first baseline
                    p
                        margin-right: 5px
                        cursor: pointer
                        color: #dd4f24
                    p:first-child
                        font-size: 12px
                    p:last-child
                        font-size: 20px
        .avatar-publicar
            display: flex
            align-items: center
            margin-right: 30px
            .avatar
                display: flex
                align-items: center;
                .img-avatar
                    margin-right: -5px;
                    z-index: 1;
                    img
                        height: 50px;
                        border-radius: 50%
                .menu
                    background: #dd4f24;
                    height: fit-content;
                    padding: 5px 5px 5px 10px;
                    p
                        color: white;
            .btn
                background: #dd4f24
                padding: 5px 30px
                margin-right: -5px
                p
                    color: white;
                    font-style: italic;
